<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <% include ./components/setup.ejs %>
  </head>
  <body class="text-center text-light">
      <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
        <% include ./components/links.ejs %>

        <main role="main" class="inner cover">
          <h1 class="cover-heading">Edit Todo</h1>
          <form action="/edit/<%= todo._id%>" method="post">
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Title" name="title" value="<%= todo.title %>" required>
            </div>
            <div class="form-group">
              <input type="Date" class="form-control" name="end_date" value="<%= todo.end_date %>">
            </div>
            <div class="form-group">
              <textarea class="form-control" rows="3" name="body" placeholder="Write something here..."><%= todo.body %></textarea>
            </div>
            <%if(err){%>
              <div class= "alert alert-danger"><%= err %></div>
            <%}%>
            <button type="submit" class="btn btn-primary">Save</button>
          </form>
        </main>

        <% include ./components/footer.ejs %>
      </div> 
  </body>
</html>
